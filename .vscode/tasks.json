{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "run",
			"args": [
				"--bin",
				"server"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "Run Blitz Server"
		},
		{
			"type": "cargo",
			"command": "run",
			"args": [
				"--bin",
				"client"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "Run Blitz Client"
		},
		{
			"type": "cargo",
			"command": "build",
			"args": [
				"--all"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "Build Everything"
		}
	]
}